@model Student_information.Models.Student
@{
    ViewData["Title"] = "Edit";
}
<h1>Edit</h1>
<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StdId" />
            <div class="form-group">
                <label for="name" class="control-label"></label>
                <input name="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="gender" class="control-label"></label>
                <input name="gender" class="form-control" />
                <span asp-validation-for="gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="address" class="control-label"></label>
                <input name="address" class="form-control" />
                <span asp-validation-for="address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="DOB" class="control-label"></label>
                <input name="DOB" class="form-control" />
                <span asp-validation-for="DOB" class="text-danger"></span>
                <div class="form-group">
                    <label asp-for="SubId" class="control-label">Subject</label>
                    <select asp-for="SubId" class="form-control" asp-items="ViewBag.SubId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="FeeId" class="control-label">Fees</label>
                    <select asp-for="FeeId" class="form-control" asp-items="ViewBag.FeeId"></select>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
